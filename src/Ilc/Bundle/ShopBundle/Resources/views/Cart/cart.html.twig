{% extends '::base.html.twig' %}

{% block breadcrumb %}
	<ul>
			<li><a href="#">Home</a></li>
			<li>Shopping cart</li>
	</ul>
{% endblock %}

{% block body %}

<div class="notification"><i class="fa fa-check"></i> The article was successfully added to your shopping cart.</div>

<table>
	<thead>
		<tr>
			<th>Product Name</th>
			<th></th>
			<th>Unit Price</th>
			<th>Qty</th>
			<th>Subtotal</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{% for line in cart %}
			{% set total = line.Quantity * line.Product.Price %}
			<tr>
				<td><img src="http://placekitten.com/68/88" alt="item picture" /> {{ line.Product.Name }}</td>
				<td>Edit</td>
				<td><span class="red bold">${{ line.Product.Price }}</span></td>
				<td><input type="number" class="cart_quantity" value="{{ line.Quantity }}" min="1" data-id="{{ line.Product.Id}}" data-url="{{ path('update_item_cart')}}" /></td>
				<td><span class="red bold">$  <span class="total">{{ total }}</span></span></td>
				<td><a href="{{ path('delete_item_cart') }}" class="delete_cart" data-id="{{ line.Product.Id }}"><span class="red bold">x</span></a></td>
			</tr>
			{% else %}
			<tr>
				<td colspan="6">Il y a rien ici t'entends ?</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<div class="flex_space">
	<a class="btn black" href="{{ path('checkout') }}">Continue shopping</a><button class="btn" href="{{ path('checkout') }}">Checkout</button>
</div>
{% endblock %}
