{% extends '::base.html.twig' %}

{% block breadcrumb %}
	<ul>
       <li><a href="#">Home</a></li>
       <li>Checkout</li>
   </ul>
{% endblock %}

{% block body %}

    <div class="left_panel">
      <div class="left_panel_title">
        <h3>Checkout Progress</h3>
    </div>
    <div class="left_panel_content">
        <ul>
          <li>Billing Address</li>
          <li>Shipping Address</li>
          <li>Shipping Method</li>
          <li>Payment Method</li>
      </ul>
  </div>
</div>

<div class="content">
    <h3 class="active"><span class="border_number">1</span> Checkout method</h3>
    <div class="checkout_content">
        <div>
           <p><strong>Checkout as a guest or register</strong></p>
           <p>Register with us for futher convienience</p>

          <form action method="post">
            <p><label><input type="radio" name="typeCheckout" value="0"> As a guest</label></p>
            <p><label><input type="radio" name="typeCheckout" value="1"> Register</label></p>
          

           <p>Register and save time !</p>
           <button type="submit" class="btn">Continue</button> 
           </form>
       </div>
       <div>
           <p><strong>Login</strong></p>
           <p>Already registered? Please login below:</p>
            <form action="{{ path('login_check') }}" class="form" method="post" role="form">

        <div class="form-group">
            <label for="username">Email</label>
            <input type="text" id="username" class="form-control" name="_username" value="" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="_password" />
        </div>

        <div class="checkbox">
            <label>
                Remember me <input type="checkbox" id="remember_me" name="_remember_me"> 
            </label>
        </div>
        <button type="submit" class="btn">Login</button>
</form>
    </div>
</div>

<h3><span class="border_number">2</span> Billing information</h3>
<h3><span class="border_number">3</span> Shipping information</h3>
<h3><span class="border_number">4</span> Shipping method</h3>
<h3><span class="border_number">5</span> Payment information</h3>
<h3><span class="border_number">6</span> Order review</h3>
</div>


{% endblock %}
